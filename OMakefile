.PHONY: makelib testlib install clean

#.SUBDIRS: tests

FILES = mlresolv
LIB = mlresolv

section
   INCLUDES += $(shell $(OCAMLC) -where)
   mlresolv_stub$(EXT_OBJ):

section
   CCLIB = $(StaticCLibrary libmresolv_stub, mlresolv_stub)
   OCAML_LIB_FLAGS += -cclib -lmlresolv_stub
   OCAMLLIBS = $(OCamlLibrary $(LIB), $(FILES))
   $(OCAMLLIBS): $(CCLIB)
   .DEFAULT: $(LIB)$(EXT_LIB)

open ../../config

IFILES =

LibInstall(makelib, $(LIB), $(IFILES))

install: makelib

clean:
   $(CLEAN)
