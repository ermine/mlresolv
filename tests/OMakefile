.PHONY: testlib clean

open ../../../config

TESTS[] =
   test
   resolver

OCAMLINCLUDES += .. $(LIBDIR)

#OCAMLFLAGS += -rectypes

foreach(name, $(TESTS))
   OCAML_OTHER_LIBS = mlresolv
   OCAML_LINK_FLAGS = -linkall
   OCamlProgram($(name), $(name))
   $(name): $(addsuffix .ml, $(name))

testlib: $(TESTS)

clean:
   $(CLEAN) $(TESTS)
